<div class='row'>
	<div class='col-md-6 col-md-offset-3'>
		<h1>Event Mail</h1>
      	<%= render 'layouts/errors', obj: @mailing %>
      	<%= form_with model: @mailing, local: true do |f| %>
            <div>
                <%= f.label :Title %>
                <%= f.text_field :title %>
            </div>
            
            <div>
                <%= f.label :Content %>
                <%= f.text_area :content %>
            </div>
            
            <div>
                <%= f.submit class: 'btn btn-primary' %>
            </div>
        <% end %>
    </div>
    <div class='col-md-3'></div>
</div>