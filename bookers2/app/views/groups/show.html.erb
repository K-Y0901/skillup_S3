<div class='row'>
  <div class='col-xs-3'>
    <h2>User info</h2>
    <%= render 'users/info', user: current_user %>

    <h2>New book</h2>
    <%= render 'books/form', book: @book %>
  </div>

  <div class='col-xs-9'>
      <h2>Group detail</h2>
        
      <table class='table'>
          <thead>
            <tr>
              <th></th>
              <th>グループ名</th>
              <th>紹介文</th>
              <th>メンバー</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
             <tr>
               <td><%= attachment_image_tag(@group, :image, :fill, 100, 100, fallback: "no-image-icon.jpg") %></td>
               <td><%= @group.name %></td>
               <td><%= @group.introduction %></td>
               <td>メンバー</td>
               <% if @group.owner_id == current_user.id %>
               <td><%= link_to 'Edit', edit_group_path(@group), class: "btn btn-sm btn-success" %></td>
               <% else %>
               <td><%= link_to 'Join this group', edit_group_path(@group), class: "btn btn-sm btn-success" %></td>
               <% end %>
             </tr>
          </tbody>
      </table>
  </div>
  
</div>