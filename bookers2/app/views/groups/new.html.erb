<h2>Create Group</h2>

<%= form_for(@group) do |f| %>
  <%= render 'layouts/errors', obj: @group %>

  <div class="field">
    <%= f.label :グループ名 %>
    <%= f.text_field :name, class: "name" %>
  </div>
  
  <div class="field">
    <%= f.label :紹介文 %>
    <%= f.text_area :introduction, class: "introduction" %>
  </div>

  <div class="field">
    <%= f.label :グループ画像 %>
    <%= f.attachment_field :image, class: "user_image" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>